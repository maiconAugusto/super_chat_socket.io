<body>
  
<div id="mydiv"></div>
<script type="text/babel">
    const { useState, useEffect } = React

    const api = axios.create({baseURL: 'http://localhost:8000/'})
    const MD5 = new Hashes.MD5;
    function Home() {
        const [classRoom, setClassRoom] = useState('');
        useEffect(() => {
            const socket = io('http://localhost:8000/');
    }, [])

    function createRoom(event) {
        event.preventDefault()
        if (classRoom === '') {
            return alert('Informe o nome da sala!')
        }
        api.post(`create-room/${MD5.hex(classRoom)}`)
            .then((response) => {
                window.open(`/class-room/${response.data.data}`)
            })
    }

    return (
        <div style={{display: 'flex', flexDirection: 'column', justifyContent: 'center', alignItems: 'center' ,height: '100%',backgroundColor: '#5C5C5C', textAlign: 'center'}}>
            <div style={{width: '25%'}}>
                <form className="form-signin">
                    <h2 className="h3 mb-3 font-weight-normal text-white">SUPER CHAT</h2>
                    <label for="inputEmail" className="sr-only">Email address</label>
                    <input style={{fontSize: 14}} type="email" id="inputEmail" onChange={(event) => setClassRoom(event.target.value)} className="form-control" placeholder="Informe o nome da sala" required="" autofocus=""/>
                    <button style={{fontSize: 14}} className="btn btn-warning btn-block mt-2" onClick={(event) => createRoom(event)}>Criar sala de bate papo</button>
                </form>
            </div>
        </div>
    )
}

ReactDOM.render(<Home />, document.getElementById('mydiv'))
</script>
